<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_padding_top"
    tools:context=".explore.ExploreActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/explore_activity_margin"
            android:layout_marginEnd="@dimen/explore_activity_margin"
            android:text="@string/explore_activity_title"
            android:textAppearance="@style/ScreenTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subtitle"
            style="@style/Subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/explore_activity_margin"
            android:layout_marginTop="@dimen/subtitle_margin_top"
            android:layout_marginEnd="@dimen/explore_activity_margin"
            android:text="@string/explore_activity_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <EditText
            android:id="@+id/search_plant"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/explore_activity_margin"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/explore_activity_margin"
            android:drawableEnd="@drawable/ic_mdi_search"
            android:hint="@string/explore_activity_search_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitle">

        </EditText>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/explore_activity_pre_filter_margin_top"
            android:background="@drawable/white_upper_corners_background"
            android:orientation="vertical"
            android:paddingTop="@dimen/explore_activity_margin"
            android:paddingBottom="@dimen/explore_activity_pre_filter_padding_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_plant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/explore_activity_pre_filter_container_margin_bottom"
                android:orientation="vertical">

                <TextView
                    style="@style/PreFilterTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/explore_activity_margin"
                    android:paddingEnd="@dimen/explore_activity_margin"
                    android:text="by type"
                    tools:ignore="MissingPrefix" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/by_type_list"
                    style="@style/scrollbarShapeStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/explore_activity_pre_filter_recycler_margin_top"
                    android:paddingBottom="@dimen/explore_activity_margin" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/explore_activity_pre_filter_container_margin_bottom"
                android:orientation="vertical">

                <TextView
                    style="@style/PreFilterTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/explore_activity_margin"
                    android:paddingEnd="@dimen/explore_activity_margin"
                    android:text="by room" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/by_room_list"
                    style="@style/scrollbarShapeStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/explore_activity_pre_filter_recycler_margin_top"
                    android:paddingBottom="@dimen/explore_activity_margin" />

            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
