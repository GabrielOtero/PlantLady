<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="quizOptionButton">@style/QuizOptionButton</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="FontQuickSandVariableFont">
        <item name="fontPath">fonts/Quicksand-Light.ttf</item>
    </style>

    <style name="PrimaryButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/primary_button_shape</item>
        <item name="fontPath">fonts/Quicksand-Regular.ttf</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/main_activity_subtitle_fontSize</item>
    </style>

    <style name="SecondaryButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/secondary_button_shape</item>
        <item name="fontPath">fonts/Quicksand-Regular.ttf</item>
        <item name="android:textSize">@dimen/main_activity_subtitle_fontSize</item>
    </style>

    <style name="Subtitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">fonts/Quicksand-SemiBold.ttf</item>
        <item name="android:textSize">@dimen/main_activity_subtitle_fontSize</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="QuizSubtitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">fonts/Quicksand-Regular.ttf</item>
        <item name="android:textSize">@dimen/main_activity_subtitle_fontSize</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="scrollbarShapeStyle">
        <item name="android:scrollbarAlwaysDrawHorizontalTrack">true</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:scrollbars">horizontal</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/thumb</item>
        <item name="android:scrollbarTrackHorizontal">@drawable/track</item>
        <item name="android:scrollbarSize">6dp</item>
    </style>

    <style name="QuizQuestionTitle">
        <item name="android:textSize">20sp</item>
        <item name="fontPath">fonts/Quicksand-SemiBold.ttf</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="QuizOptionButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/quiz_option_shape</item>
        <item name="fontPath">fonts/Quicksand-Regular.ttf</item>
        <item name="android:textSize">@dimen/main_activity_subtitle_fontSize</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="YourPlantIs">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontPath">fonts/Quicksand-SemiBold.ttf</item>
    </style>

    <style name="YouPlantDesc">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontPath">fonts/halimunw7jn.ttf</item>
    </style>

    <style name="YourPlantFamilyDesc">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#4F4F4F</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontPath">fonts/Quicksand-Regular.ttf</item>
    </style>

    <style name="DetailSubtitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontPath">fonts/Quicksand-SemiBold.ttf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ScreenTitle" parent="android:TextAppearance">
        <item name="fontPath">fonts/halimunw7jn.ttf</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/explore_activity_font_size_title</item>
    </style>

    <style name="PlantTitle" parent="android:TextAppearance">
        <item name="fontPath">fonts/halimunw7jn.ttf</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/explore_activity_font_size_title</item>
    </style>

    <style name="PreFilterTitle">
        <item name="android:textAllCaps">true</item>
        <item name="fontPath">fonts/Quicksand-SemiBold.ttf</item>
        <item name="android:color">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PreFilterLabel">
        <item name="fontPath">fonts/Quicksand-Regular.ttf</item>
        <item name="android:color">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="fontPath">fonts/Quicksand-Light.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DetailDescription">
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/Quicksand-Regular.ttf</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="CardDesc">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="fontPath">fonts/Quicksand-Regular.ttf</item>
    </style>

    <style name="TakeQuizAgainDesc">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/Quicksand-Regular.ttf</item>
    </style>

    <style name="EmptyStateMessage" parent="android:TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">fonts/Quicksand-Regular.ttf</item>
    </style>
</resources>


